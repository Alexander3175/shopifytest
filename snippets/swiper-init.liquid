<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.swiper', {
      loop: true,
slidesPerView: {{ section.settings.NumberOfSlides_desktop | json }},
spaceBetween: {{ section.settings.slide_spacing | json }},
console.log('slidesPerView desktop:', {{ section.settings.NumberOfSlides_desktop | json }});
console.log('spaceBetween:', {{ section.settings.slide_spacing | json }});



      {% if section.settings.show_navigation %}
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      {% endif %}

      {% if section.settings.show_pagination %}
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      {% endif %}

      {% if section.settings.show_scroll %}
      scrollbar: {
        el: '.swiper-scrollbar',
        draggable: true,
      },
      {% endif %}

breakpoints: {
  480: {
    slidesPerView: {{ section.settings.NumberOfSlides_mobile }},
    spaceBetween: {{ section.settings.slide_spacing }}
  },
  768: {
    slidesPerView: {{ section.settings.NumberOfSlides_tablet}},
    spaceBetween: {{ section.settings.slide_spacing}}
  },
  1024: {
    slidesPerView: {{ section.settings.NumberOfSlides_desktop }},
    spaceBetween: {{ section.settings.slide_spacing }}
  }
}

    });
  });
</script>

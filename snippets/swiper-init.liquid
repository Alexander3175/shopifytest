<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.swiper', {
      loop: true,
slidesPerView: {{ section.settings.NumberOfSlides_desktop | default: 3 }},
spaceBetween: {{ section.settings.slide_spacing | default: 20 }},


      {% if section.settings.show_navigation %}
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      {% endif %}

      {% if section.settings.show_pagination %}
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      {% endif %}

      {% if section.settings.show_scroll %}
      scrollbar: {
        el: '.swiper-scrollbar',
        draggable: true,
      },
      {% endif %}

breakpoints: {
  480: {
    slidesPerView: {{ section.settings.NumberOfSlides_mobile | default: 1 }},
    spaceBetween: {{ section.settings.slide_spacing | default: 20 }}
  },
  768: {
    slidesPerView: {{ section.settings.NumberOfSlides_tablet | default: 2 }},
    spaceBetween: {{ section.settings.slide_spacing | default: 20 }}
  },
  1024: {
    slidesPerView: {{ section.settings.NumberOfSlides_desktop | default: 3 }},
    spaceBetween: {{ section.settings.slide_spacing | default: 20 }}
  }
}

    });
  });
</script>
